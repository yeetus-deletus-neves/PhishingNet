{
  "manifest_version": 3,
  "name": "Pishing Net",
  "version": "1.0",

  "description": "Warns the user of probable phishing attempts",

  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs"
  ],

  "background":{
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
      {
        "matches": ["*://outlook.office365.com/mail/inbox/id/*",
                    "*://outlook.office.com/mail/inbox/id/*",
                    "*://outlook.live.com/mail/0/*"],
        "js": ["contentScript.js"]
      }
    ]
}