{
    "manifest_version": 3,
    "name": "Phising Net",
    "version": "1.0",
  
    "description": "Alert the user to possible phising email attempts",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    "background":{
        "scripts" : ["extension.js"]
    },
    "host_permissions":[
      "https://login.microsoftonline.com/common/oauth2/v2.0/token/*"
    ],
    "content_scripts": [
        {
          "matches": ["*://outlook.office365.com/mail/inbox/id/*"],
          "js": ["graphAPI.js"]
        },
        {
          "matches": ["*://outlook.office.com/mail/inbox/id/*"],
          "js": ["graphAPI.js"]
        },
        {
          "matches": ["*://outlook.live.com/mail/0/*"],
          "js": ["graphAPI.js"]
        }
    ],
    "action":{
      "default_popup": "pages/index.html",
      "default_title": "Button pop up"
    }
}